%html
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "Alcohol Recording System", :name => "Description"}
        %meta{:content => "Huah Chi, Inc.", :name => "author"}
          %meta{:content => "Copyright (c) 2011 Huah Chi Co., LD., all rights reserved.", :name => "Copyright"}
            %title Alcohol Recording System
            %link{:href => "/css/default.css", :rel => "stylesheet"}/
            /[if IE]
              <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  %body
    %section#mainRight.clear
      %header
        %h1
          %span
            %b 酒精測試系統&nbsp;&nbsp;
            - if current_user
              Hi, #{current_user.name}
              %a{:href => "/logout"}
                登出
            - else
              %a{:href => "/login"}
                登入    
          %span
      - if request.path.starts_with? '/manager'
        %nav
          %ul
            %li
              %a.selected{:href => "/manager/signup"} 新增使用者
            %li
              %a{:href => "/manager"} 編輯使用者資訊
            %li
              %a{:href => "/manager"} 新增分站
            %li
              %a{:href => "/manager"} 編輯分站資訊
      - else             
        %nav
          %ul
            %li
              %a.selected{:href => "/"} 全省日報表
            %li
              %a{:href => "/site"} 分站測試記錄
            %li
              %a{:href => "/manager"} 管理者
      - [:notice, :warning, :error].each do |name|
        - if flash.has_key?(name)
          %h3{:id => name, :class => name} #{flash[name]}

    = yield
    %footer
      %p c 2011 Huah Chi Co., LD., all rights reserved.
      %ul
        %li
          %a{:href => "/"} Home
        %li
          %a{:href => "/about.html"} About
        %li
          %a{:href => "/contact.html"} Contact
    / end mainRight
    #logoTxt
      %h1
        %span
      %h2
        %span